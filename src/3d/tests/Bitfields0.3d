typedef struct _BF {
   UINT32 x : 6;
   UINT32 y : 10 { y <= 900 };
   UINT32 z : 16 { y + z <= 60000 }
} BF, *PBF;

entrypoint
typedef struct _BF2(mutable UINT32 *outx) {
  BF x
     {:on-success
        *outx = x;
        return true;
     };
} BF2, *PBF2;

typedef struct _BF3 {
   UINT8  a;
   UINT32 x : 6 { x == 0 };
   UINT32 y : 10;
   UINT32 z : 16;
} BF3;

typedef struct _BF_UINT16 {
    UINT16    f1:1  { f1 == 0 };
    UINT16    f2:15;
} BF_UINT16;

export
typedef struct _T {
    UINT8  f1:1  { f1 == 0 };
    UINT8  f2:7;
} T;

//bitfields with actions
typedef struct _BFA (mutable UINT8 *outx, mutable UINT8 *outy, mutable UINT8 *outz) {
   UINT8 x : 4
     { x > 0 }
     {:act *outx = x; };
   UINT8 y:2
     {:act *outy = y; };
   UINT8 z:2
     {:act *outz = z; };     
   UINT32 blah;
} BFA;
